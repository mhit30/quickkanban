{
  "family": "quickkanban-task",
  "executionRoleArn": "",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "volumes": [
    {
      "name": "ssl-certs",
      "host": {
        "sourcePath": "/etc/letsencrypt"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "",
      "memory": 128,
      "cpu": 64,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        },
        {
          "containerPort": 443,
          "hostPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "ssl-certs",
          "containerPath": "/etc/letsencrypt",
          "readOnly": true
        }
      ],
      "links": ["backend"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "nginx"
        }
      }
    },
    {
      "name": "backend",
      "image": "",
      "memory": 512,
      "memoryReservation": 256,
      "cpu": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 0
        }
      ],
      "links": ["redis"],
      "secrets": [
        {
          "name": "MONGO_URI_PROD",
          "valueFrom": ""
        },
        {
          "name": "REDIS_PASS",
          "valueFrom": ""
        }
      ],
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "CLIENT_URL_PROD1",
          "value": "https://quickkanban-frontend.onrender.com"
        },
        {
          "name": "CLIENT_URL_PROD2",
          "value": "https://quickkanban.xyz"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis:latest",
      "memory": 256,
      "memoryReservation": 128,
      "cpu": 64,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 0
        }
      ],
      "secrets": [
        {
          "name": "REDIS_PASS",
          "valueFrom": ""
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "redis"
        }
      },
      "command": ["sh", "-c", "exec redis-server --requirepass \"$REDIS_PASS\""]
    }
  ]
}
