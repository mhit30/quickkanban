{
  "family": "quickkanban-task",
  "executionRoleArn": "arn:aws:iam::582049327707:role/ecsTaskExecutionRole",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "volumes": [
    {
      "name": "ssl-certs",
      "host": {
        "sourcePath": "/etc/letsencrypt"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "582049327707.dkr.ecr.us-east-1.amazonaws.com/my-nginx",
      "memory": 64,
      "cpu": 32,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        },
        {
          "containerPort": 443,
          "hostPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "ssl-certs",
          "containerPath": "/etc/letsencrypt",
          "readOnly": true
        }
      ],
      "links": ["backend"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "nginx"
        }
      }
    },
    {
      "name": "backend",
      "image": "582049327707.dkr.ecr.us-east-1.amazonaws.com/my-backend",
      "memory": 192,
      "memoryReservation": 128,
      "cpu": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 0
        }
      ],
      "links": ["redis", "embed-service", "query-service"],
      "secrets": [
        {
          "name": "MONGO_URI_PROD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:mongo_uri_prod"
        },
        {
          "name": "REDIS_PASS",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:redis-password"
        }
      ],
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "CLIENT_URL_PROD1",
          "value": "https://quickkanban-frontend.onrender.com"
        },
        {
          "name": "CLIENT_URL_PROD2",
          "value": "https://quickkanban.xyz"
        },
        {
          "name": "EMBED_SERVICE_URL",
          "value": "http://embed-service:8001"
        },
        {
          "name": "QUERY_SERVICE_URL",
          "value": "http://query-service:8003"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis:latest",
      "memory": 64,
      "memoryReservation": 32,
      "cpu": 64,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 0
        }
      ],
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ],
      "secrets": [
        {
          "name": "REDIS_PASS",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:redis-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "redis"
        }
      },
      "command": ["sh", "-c", "exec redis-server --requirepass \"$REDIS_PASS\""]
    },
    {
      "name": "embed-service",
      "image": "582049327707.dkr.ecr.us-east-1.amazonaws.com/my-embed-service:latest",
      "cpu": 128,
      "memory": 256,
      "memoryReservation": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "hostPort": 0
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "embed"
        }
      },
      "secrets": [
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:gem"
        },
        {
          "name": "QDRANT_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:qdrant"
        },
        {
          "name": "QDRANT_URL_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:qdrant_url_key"
        }
      ]
    },
    {
      "name": "retrieve-service",
      "image": "582049327707.dkr.ecr.us-east-1.amazonaws.com/my-retrieve-service:latest",
      "memory": 256,
      "memoryReservation": 128,
      "cpu": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8002,
          "hostPort": 0
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "retrieve"
        }
      },
      "secrets": [
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:gem"
        },
        {
          "name": "QDRANT_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:qdrant"
        },
        {
          "name": "QDRANT_URL_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:qdrant_url_key"
        }
      ]
    },
    {
      "name": "query-service",
      "image": "582049327707.dkr.ecr.us-east-1.amazonaws.com/my-query-service:latest",
      "memory": 192,
      "memoryReservation": 128,
      "cpu": 128,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8003,
          "hostPort": 0
        }
      ],
      "links": ["retrieve-service", "redis"],
      "secrets": [
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:gem"
        },
        {
          "name": "MONGO_URI_PROD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:mongo_uri_prod"
        },
        {
          "name": "REDIS_PASS",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:582049327707:secret:redis-password"
        }
      ],
      "environment": [
        {
          "name": "REDIS_HOST",
          "value": "redis"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "RETRIEVE_SERVICE_URL",
          "value": "http://retrieve-service:8002"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quickkanban",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "query"
        }
      }
    }
  ]
}
